<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="login">Login</h1>

  <div class="row login-form">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST" class="form">
            <div class="form-group">
              <label for="email" class="input">Email</label>
              <input type="email" class="form-control input" name="username">
            </div>
            <div class="form-group">
              <label for="password" class="input">Password</label>
              <input type="password" class="form-control input" name="password">
            </div>
            <button type="submit" class="btn btn-dark button">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4 google">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block icon" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
